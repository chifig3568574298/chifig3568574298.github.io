</head>
<body>
    <div class="container">
        <h1>Threes</h1>
        
        <div class="stats-container">
            <div class="stats-box">分数: <span id="score">0</span></div>
            <div class="stats-box">最高分: <span id="high-score">0</span></div>
        </div>
        
        <div class="game-board" id="game-board">
            <!-- 游戏格子将通过JavaScript动态生成 -->
        </div>
        
        <div class="controls">
            <button class="control-btn" id="up">↑</button>
            <button class="control-btn" id="left">←</button>
            <button class="control-btn" id="right">→</button>
            <button class="control-btn" id="down">↓</button>
        </div>
        
        <div class="instructions">
            <p>合并相同数字（1+2=3，3+3=6，6+6=12...）</p>
            <p>智能平衡：当棋盘上2多时增加1的生成概率，反之亦然</p>
            <p>每次移动后随机改变3个障碍物位置</p>
        </div>
    </div>
    
    <div class="game-over" id="game-over">
        <h2>游戏结束!</h2>
        <p>你的分数: <span id="final-score">0</span></p>
        <p id="game-over-message"></p>
        <button class="restart-btn" id="restart-btn">重新开始</button>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const gameBoard = document.getElementById('game-board');
            const scoreDisplay = document.getElementById('score');
            const highScoreDisplay = document.getElementById('high-score');
            const gameOverScreen = document.getElementById('game-over');
            const finalScoreDisplay = document.getElementById('final-score');
            const gameOverMessage = document.getElementById('game-over-message');
            const restartBtn = document.getElementById('restart-btn');
            
            // 方向控制按钮
            const upBtn = document.getElementById('up');
            const downBtn = document.getElementById('down');
            const leftBtn = document.getElementById('left');
            const rightBtn = document.getElementById('right');
            
            const BOARD_SIZE = 5;
            let board = [];
            let score = 0;
            let highScore = localStorage.getItem('threesHighScore') || 0;
            let gameOver = false;
            let consecutiveMerges = 0;
            let lastMergeTime = 0;
            
            // 概率相关变量
            let probability1 = 0.45;  // 生成1的概率
            let probability2 = 0.45;  // 生成2的概率
            let probability3 = 0.10;  // 生成3的概率（固定为10%左右）
            
            highScoreDisplay.textContent = highScore;
            
            // 初始化游戏
            function initGame() {
                board = Array(BOARD_SIZE).fill().map(() => Array(BOARD_SIZE).fill(0));
                score = 0;
                gameOver = false;
                consecutiveMerges = 0;
                lastMergeTime = 0;
                
                // 重置概率
                probability1 = 0.45;
                probability2 = 0.45;
                probability3 = 0.10;
                
                scoreDisplay.textContent = score;
                gameOverScreen.style.display = 'none';
                
                // 清空游戏板
                gameBoard.innerHTML = '';
                
                // 创建游戏格子
                for (let i = 0; i < BOARD_SIZE; i++) {
                    for (let j = 0; j < BOARD_SIZE; j++) {
                        const cell = document.createElement('div');
                        cell.className = 'cell';
                        cell.id = `cell-${i}-${j}`;
                        gameBoard.appendChild(cell);
                    }
                }
                
                // 初始生成两个数字
                addRandomTile();
                addRandomTile();
                
                // 初始生成3个障碍物
                addObstacles();
                
                // 更新显示
                updateBoard();
            }
            
            // 计算当前棋盘上1和2的数量
            function countNumbers() {
                let count1 = 0, count2 = 0;
                
                for (let i = 0; i < BOARD_SIZE; i++) {
                    for (let j = 0; j < BOARD_SIZE; j++) {
                        const value = board[i][j];
                        if (value === 1) count1++;
                        else if (value === 2) count2++;
                    }
                }
                
                return { count1, count2 };
            }
            
            // 根据当前棋盘情况调整概率
            function adjustProbability() {
                const { count1, count2 } = countNumbers();
                const total = count1 + count2;
                
                // 如果棋盘上没有1或2，保持默认概率
                if (total === 0) {
                    probability1 = 0.45;
                    probability2 = 0.45;
                    probability3 = 0.10;
                    return;
                }
                
                // 计算1和2的比例
                const ratio1 = count1 / total;
                const ratio2 = count2 / total;
                
                // 基础概率
                const baseProb = 0.45;
                
                // 根据比例调整概率
                if (ratio1 > ratio2) {
                    // 1比2多，增加2的概率
                    probability2 = Math.min(0.80, baseProb + (ratio1 - ratio2) * 0.7);
                    probability1 = Math.max(0.10, baseProb - (ratio1 - ratio2) * 0.5);
                } else {
                    // 2比1多，增加1的概率
                    probability1 = Math.min(0.80, baseProb + (ratio2 - ratio1) * 0.7);
                    probability2 = Math.max(0.10, baseProb - (ratio2 - ratio1) * 0.5);
                }
                
                // 3的概率固定为10%
                probability3 = 0.10;
                
                // 调整1和2的概率，使总和为90%
                const remainingProb = 0.90;
                const totalProb12 = probability1 + probability2;
                probability1 = (probability1 / totalProb12) * remainingProb;
                probability2 = (probability2 / totalProb12) * remainingProb;
            }
            
            // 添加随机数字块（智能概率调整）
            function addRandomTile() {
                const emptyCells = [];
                
                // 找到所有空格子
                for (let i = 0; i < BOARD_SIZE; i++) {
                    for (let j = 0; j < BOARD_SIZE; j++) {
                        if (board[i][j] === 0) {
                            emptyCells.push({i, j});
                        }
                    }
                }
                
                if (emptyCells.length === 0) return false;
                
                // 随机选择一个空格子
                const randomCell = emptyCells[Math.floor(Math.random() * emptyCells.length)];
                
                // 根据调整后的概率生成数字
                adjustProbability();
                
                const randomValue = Math.random();
                let value;
                
                if (randomValue < probability1) {
                    value = 1;
                } else if (randomValue < probability1 + probability2) {
                    value = 2;
                } else {
                    value = 3;
                }
                
                board[randomCell.i][randomCell.j] = value;
                
                // 添加新方块动画
                const cellElement = document.getElementById(`cell-${randomCell.i}-${randomCell.j}`);
                cellElement.classList.add('new-tile');
                setTimeout(() => {
                    cellElement.classList.remove('new-tile');
                }, 300);
                
                return true;
            }
            
            // 添加/更新障碍物（随机改变位置）
            function addObstacles() {
                // 首先清除所有现有障碍物
                for (let i = 0; i < BOARD_SIZE; i++) {
                    for (let j = 0; j < BOARD_SIZE; j++) {
                        if (board[i][j] === -1) {
                            board[i][j] = 0;
                        }
                    }
                }
                
                const emptyCells = [];
                
                // 找到所有空格子
                for (let i = 0; i < BOARD_SIZE; i++) {
                    for (let j = 0; j < BOARD_SIZE; j++) {
                        if (board[i][j] === 0) {
                            emptyCells.push({i, j});
                        }
                    }
                }
                
                if (emptyCells.length < 3) return;
                
                // 随机选择3个空格子作为障碍物
                for (let k = 0; k < 3; k++) {
                    if (emptyCells.length === 0) break;
                    
                    const randomIndex = Math.floor(Math.random() * emptyCells.length);
                    const cell = emptyCells.splice(randomIndex, 1)[0];
                    board[cell.i][cell.j] = -1; // -1表示障碍物
                    
                    // 添加障碍物移动动画
                    const cellElement = document.getElementById(`cell-${cell.i}-${cell.j}`);
                    cellElement.classList.add('obstacle-move');
                    setTimeout(() => {
                        cellElement.classList.remove('obstacle-move');
                    }, 300);
                }
            }
            
            // 更新游戏板显示
            function updateBoard() {
                for (let i = 0; i < BOARD_SIZE; i++) {
                    for (let j = 0; j < BOARD_SIZE; j++) {
                        const cell = document.getElementById(`cell-${i}-${j}`);
                        const value = board[i][j];
                        
                        cell.textContent = '';
                        cell.className = 'cell';
                        
                        if (value === -1) {
                            cell.textContent = 'X';
                            cell.classList.add('obstacle');
                        } else if (value > 0) {
                            cell.textContent = value;
                            cell.classList.add(`cell-${value}`);
                        }
                    }
                }
            }
            
            // 检查游戏是否结束
            function checkGameOver() {
                // 检查是否有空格子
                for (let i = 0; i < BOARD_SIZE; i++) {
                    for (let j = 0; j < BOARD_SIZE; j++) {
                        if (board[i][j] === 0) return false;
                    }
                }
                
                // 检查是否有可合并的相邻格子
                for (let i = 0; i < BOARD_SIZE; i++) {
                    for (let j = 0; j < BOARD_SIZE; j++) {
                        const value = board[i][j];
                        if (value === -1) continue; // 障碍物不能合并
                        
                        // 检查右侧格子
                        if (j < BOARD_SIZE - 1) {
                            const rightValue = board[i][j+1];
                            if (rightValue !== -1 && 
                                ((value === 1 && rightValue === 2) || 
                                 (value === 2 && rightValue === 1) || 
                                 value === rightValue)) {
                                return false;
                            }
                        }
                        
                        // 检查下方格子
                        if (i < BOARD_SIZE - 1) {
                            const downValue = board[i+1][j];
                            if (downValue !== -1 && 
                                ((value === 1 && downValue === 2) || 
                                 (value === 2 && downValue === 1) || 
                                 value === downValue)) {
                                return false;
                            }
                        }
                    }
                }
                
                return true;
            }
            
            // 显示连击效果
            function showComboEffect(x, y, comboCount) {
                const comboText = document.createElement('div');
                comboText.className = 'combo-indicator';
                comboText.textContent = `连击 x${comboCount}!`;
                comboText.style.left = `${x}px`;
                comboText.style.top = `${y}px`;
                
                document.querySelector('.container').appendChild(comboText);
                
                setTimeout(() => {
                    document.querySelector('.container').removeChild(comboText);
                }, 1000);
            }
            
            // 移动格子
            function move(direction) {
                if (gameOver) return false;
                
                let moved = false;
                let mergedThisTurn = false;
                const oldBoard = JSON.parse(JSON.stringify(board));
                
                // 根据方向处理移动
                switch(direction) {
                    case 'up':
                        for (let j = 0; j < BOARD_SIZE; j++) {
                            for (let i = 1; i < BOARD_SIZE; i++) {
                                if (board[i][j] !== 0 && board[i][j] !== -1) {
                                    const result = moveTile(i, j, -1, 0);
                                    moved = result.moved || moved;
                                    if (result.merged) mergedThisTurn = true;
                                }
                            }
                        }
                        break;
                    case 'down':
                        for (let j = 0; j < BOARD_SIZE; j++) {
                            for (let i = BOARD_SIZE - 2; i >= 0; i--) {
                                if (board[i][j] !== 0 && board[i][j] !== -1) {
                                    const result = moveTile(i, j, 1, 0);
                                    moved = result.moved || moved;
                                    if (result.merged) mergedThisTurn = true;
                                }
                            }
                        }
                        break;
                    case 'left':
                        for (let i = 0; i < BOARD_SIZE; i++) {
                            for (let j = 1; j < BOARD_SIZE; j++) {
                                if (board[i][j] !== 0 && board[i][j] !== -1) {
                                    const result = moveTile(i, j, 0, -1);
                                    moved = result.moved || moved;
                                    if (result.merged) mergedThisTurn = true;
                                }
                            }
                        }
                        break;
                    case 'right':
                        for (let i = 0; i < BOARD_SIZE; i++) {
                            for (let j = BOARD_SIZE - 2; j >= 0; j--) {
                                if (board[i][j] !== 0 && board[i][j] !== -1) {
                                    const result = moveTile(i, j, 0, 1);
                                    moved = result.moved || moved;
                                    if (result.merged) mergedThisTurn = true;
                                }
                            }
                        }
                        break;
                }
                
                // 如果移动有效，添加新数字和更新障碍物位置
                if (moved) {
                    // 处理连击逻辑
                    const currentTime = Date.now();
                    if (mergedThisTurn) {
                        if (currentTime - lastMergeTime < 1000) {
                            consecutiveMerges++;
                            if (consecutiveMerges >= 2) {
                                // 显示连击效果
                                const boardRect = gameBoard.getBoundingClientRect();
                                const x = boardRect.left + boardRect.width / 2;
                                const y = boardRect.top + boardRect.height / 2;
                                showComboEffect(x, y, consecutiveMerges);
                            }
                        } else {
                            consecutiveMerges = 1;
                        }
                        lastMergeTime = currentTime;
                    } else {
                        consecutiveMerges = 0;
                    }
                    
                    addRandomTile();
                    addObstacles(); // 随机改变障碍物位置
                    updateBoard();
                    
                    // 分数显示动画
                    scoreDisplay.classList.add('score-change');
                    setTimeout(() => {
                        scoreDisplay.classList.remove('score-change');
                    }, 500);
                    
                    scoreDisplay.textContent = score;
                    
                    // 更新最高分
                    if (score > highScore) {
                        highScore = score;
                        highScoreDisplay.textContent = highScore;
                        localStorage.setItem('threesHighScore', highScore);
                    }
                    
                    // 检查游戏是否结束
                    if (checkGameOver()) {
                        gameOver = true;
                        finalScoreDisplay.textContent = score;
                        
                        // 根据分数显示不同的结束消息
                        if (score >= 5000) {
                            gameOverMessage.textContent = "太棒了！你是Threes大师！";
                        } else if (score >= 2000) {
                            gameOverMessage.textContent = "很好的成绩！继续努力！";
                        } else {
                            gameOverMessage.textContent = "再接再厉，下次会更好！";
                        }
                        
                        gameOverScreen.style.display = 'flex';
                    }
                }
                
                return moved;
            }
            
            // 移动单个格子
            function moveTile(i, j, di, dj) {
                let moved = false;
                let merged = false;
                let currentI = i;
                let currentJ = j;
                
                while (true) {
                    const nextI = currentI + di;
                    const nextJ = currentJ + dj;
                    
                    // 检查是否超出边界
                    if (nextI < 0 || nextI >= BOARD_SIZE || nextJ < 0 || nextJ >= BOARD_SIZE) {
                        break;
                    }
                    
                    // 检查下一个格子是否是障碍物
                    if (board[nextI][nextJ] === -1) {
                        break;
                    }
                    
                    // 如果下一个格子是空的，移动过去
                    if (board[nextI][nextJ] === 0) {
                        board[nextI][nextJ] = board[currentI][currentJ];
                        board[currentI][currentJ] = 0;
                        currentI = nextI;
                        currentJ = nextJ;
                        moved = true;
                    } 
                    // 如果下一个格子有数字，检查是否可以合并
                    else if (board[nextI][nextJ] > 0) {
                        const currentValue = board[currentI][currentJ];
                        const nextValue = board[nextI][nextJ];
                        
                        // 检查是否可以合并（1+2=3 或 相同数字相加）
                        if ((currentValue === 1 && nextValue === 2) || 
                            (currentValue === 2 && nextValue === 1) || 
                            (currentValue === nextValue && currentValue >= 3)) {
                            
                            // 合并数字
                            const newValue = currentValue === nextValue ? currentValue * 2 : 3;
                            board[nextI][nextJ] = newValue;
                            board[currentI][currentJ] = 0;
                            
                            // 增加分数
                            score += newValue;
                            moved = true;
                            merged = true;
                            
                            // 添加合并动画
                            const cellElement = document.getElementById(`cell-${nextI}-${nextJ}`);
                            cellElement.classList.add('merge-tile');
                            setTimeout(() => {
                                cellElement.classList.remove('merge-tile');
                            }, 400);
                        }
                        break;
                    } else {
                        break;
                    }
                }
                
                return { moved, merged };
            }
            
            // 键盘控制
            document.addEventListener('keydown', function(event) {
                if (gameOver) return;
                
                switch(event.key) {
                    case 'ArrowUp':
                        event.preventDefault();
                        move('up');
                        break;
                    case 'ArrowDown':
                        event.preventDefault();
                        move('down');
                        break;
                    case 'ArrowLeft':
                        event.preventDefault();
                        move('left');
                        break;
                    case 'ArrowRight':
                        event.preventDefault();
                        move('right');
                        break;
                }
            });
            
            // 触摸滑动手势控制
            let touchStartX, touchStartY;
            
            document.addEventListener('touchstart', function(event) {
                touchStartX = event.touches[0].clientX;
                touchStartY = event.touches[0].clientY;
                event.preventDefault();
            }, { passive: false });
            
            document.addEventListener('touchmove', function(event) {
                event.preventDefault();
            }, { passive: false });
            
            document.addEventListener('touchend', function(event) {
                if (!touchStartX || !touchStartY) return;
                
                const touchEndX = event.changedTouches[0].clientX;
                const touchEndY = event.changedTouches[0].clientY;
                
                const diffX = touchEndX - touchStartX;
                const diffY = touchEndY - touchStartY;
                
                // 确定滑动方向（需要最小滑动距离）
                if (Math.abs(diffX) > 20 || Math.abs(diffY) > 20) {
                    if (Math.abs(diffX) > Math.abs(diffY)) {
                        // 水平滑动
                        if (diffX > 0) {
                            move('right');
                        } else {
                            move('left');
                        }
                    } else {
                        // 垂直滑动
                        if (diffY > 0) {
                            move('down');
                        } else {
                            move('up');
                        }
                    }
                }
                
                touchStartX = null;
                touchStartY = null;
                event.preventDefault();
            }, { passive: false });
            
            // 按钮控制
            upBtn.addEventListener('click', () => move('up'));
            downBtn.addEventListener('click', () => move('down'));
            leftBtn.addEventListener('click', () => move('left'));
            rightBtn.addEventListener('click', () => move('right'));
            
            // 重新开始游戏
            restartBtn.addEventListener('click', initGame);
            
            // 初始化游戏
            initGame();
        });
    </script>
</body>
</html>
