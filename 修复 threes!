            animation: appear 0.2s ease;
        }
        
        @keyframes merge {
            0% { transform: scale(1); }
            50% { transform: scale(1.2); }
            100% { transform: scale(1); }
        }
        
        .tile.merged {
            animation: merge 0.3s ease;
        }
