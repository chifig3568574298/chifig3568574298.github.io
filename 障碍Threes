            to { transform: translateY(0); opacity: 1; }
        }
        
        @keyframes popIn {
            0% { transform: scale(0); }
            70% { transform: scale(1.1); }
            100% { transform: scale(1); }
        }
        
        @keyframes mergeEffect {
            0% { transform: scale(1); }
            50% { transform: scale(1.2); }
            100% { transform: scale(1); }
        }
        
        @keyframes scorePop {
            0% { transform: scale(1); }
            50% { transform: scale(1.2); }
            100% { transform: scale(1); }
        }
        
        .obstacle-move {
            animation: obstacleMove 0.3s ease;
        }
        
        @keyframes obstacleMove {
            0% { transform: scale(1); }
            50% { transform: scale(0.8); }
            100% { transform: scale(1); }
        }
        
        .combo-indicator {
            position: absolute;
            color: #FFD700;
            font-weight: bold;
            font-size: 1.2rem;
            z-index: 5;
            animation: comboFloat 1s ease forwards;
            text-shadow: 0 0 5px rgba(0,0,0,0.5);
        }
        
        @keyframes comboFloat {
            0% { transform: translateY(0); opacity: 1; }
            100% { transform: translateY(-30px); opacity: 0; }
        }
        
        @media (max-width: 500px) {
            h1 { font-size: 1.5rem; }
            .cell { font-size: 1.2rem; }
            .stats-box { font-size: 0.9rem; padding: 6px 10px; }
        }
