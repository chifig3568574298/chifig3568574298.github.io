            font-weight: 300;
        }
        
        .game-info {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
            gap: 10px;
        }
        
        .score-box, .next-tile-box {
            background: rgba(255,255,255,0.9);
            padding: 15px;
            border-radius: 10px;
            flex: 1;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }
        
        .score-label, .next-label {
            font-size: 0.9em;
            color: #666;
            margin-bottom: 5px;
        }
        
        .score-value, .next-value {
            font-size: 1.8em;
            font-weight: bold;
            color: #333;
        }
        
        .game-board-container {
            position: relative;
            width: 100%;
            margin-bottom: 20px;
        }
        
        .game-board {
            width: 100%;
            aspect-ratio: 1;
            background: #bbada0;
            border-radius: 10px;
            position: relative;
            overflow: hidden;
            box-shadow: 0 8px 25px rgba(0,0,0,0.2);
        }
        
        .grid-background {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            grid-template-rows: repeat(4, 1fr);
            gap: 10px;
            padding: 10px;
        }
        
        .grid-cell {
            background: rgba(238, 228, 218, 0.35);
            border-radius: 5px;
        }
        
        .tiles-container {
            position: absolute;
            top: 10px;
            left: 10px;
            width: calc(100% - 20px);
            height: calc(100% - 20px);
            pointer-events: none;
        }
        
        .tile {
            position: absolute;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 5px;
            font-weight: 900;
            transition: all 0.15s ease;
            box-shadow: 0 3px 6px rgba(0,0,0,0.1);
            pointer-events: none;
        }
        
        .tile-1 { background: #eee4da; color: #776e65; font-size: 2.2rem; }
        .tile-2 { background: #ede0c8; color: #776e65; font-size: 2.2rem; }
