<body>
    <div class="container">
        <h1>Threes!</h1>
        
        <div class="game-info">
            <div class="score-box">
                <div class="score-label">分数</div>
                <div class="score-value" id="score">0</div>
            </div>
            <div class="next-tile-box">
                <div class="next-label">下一个</div>
                <div class="next-value" id="next-tile">?</div>
            </div>
            <div class="score-box">
                <div class="score-label">最高分</div>
                <div class="score-value" id="high-score">0</div>
            </div>
        </div>
        
        <div class="game-board-container">
            <div class="game-board" id="game-board">
                <div class="grid-background">
                    <div class="grid-cell"></div><div class="grid-cell"></div><div class="grid-cell"></div><div class="grid-cell"></div>
                    <div class="grid-cell"></div><div class="grid-cell"></div><div class="grid-cell"></div><div class="grid-cell"></div>
                    <div class="grid-cell"></div><div class="grid-cell"></div><div class="grid-cell"></div><div class="grid-cell"></div>
                    <div class="grid-cell"></div><div class="grid-cell"></div><div class="grid-cell"></div><div class="grid-cell"></div>
                </div>
                
                <div class="tiles-container" id="tiles-container"></div>
                
                <div class="game-over" id="game-over">
                    <h2>游戏结束!</h2>
                    <p>最终分数: <span id="final-score">0</span></p>
                    <button id="restart">重新开始</button>
                </div>
            </div>
        </div>
        
        <div class="controls">
            <button id="new-game">新游戏</button>
        </div>
        
        <div class="instructions">
            <p>滑动或使用方向键移动方块 | 1+2=3, 3+3=6, 6+6=12...</p>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const GRID_SIZE = 4;
            const grid = Array(GRID_SIZE).fill().map(() => Array(GRID_SIZE).fill(0));
            let score = 0;
            let highScore = parseInt(localStorage.getItem('threesHighScore')) || 0;
            let nextTileValue = 0;
            let nextTileDeck = [];
            let gameOver = false;
            
            const gameBoard = document.getElementById('game-board');
            const tilesContainer = document.getElementById('tiles-container');
            const scoreDisplay = document.getElementById('score');
            const highScoreDisplay = document.getElementById('high-score');
            const nextTileDisplay = document.getElementById('next-tile');
            const gameOverScreen = document.getElementById('game-over');
            const finalScoreDisplay = document.getElementById('final-score');
            const newGameButton = document.getElementById('new-game');
            const restartButton = document.getElementById('restart');
            
            function initGame() {
                for (let r = 0; r < GRID_SIZE; r++) {
                    for (let c = 0; c < GRID_SIZE; c++) {
                        grid[r][c] = 0;
                    }
                }
                
                score = 0;
                gameOver = false;
                scoreDisplay.textContent = score;
                highScoreDisplay.textContent = highScore;
                gameOverScreen.style.display = 'none';
                
                refillNextTileDeck();
                generateNextTile();
                
                tilesContainer.innerHTML = '';
                
                addRandomTile();
                addRandomTile();
                
                renderTiles();
            }
            
            function refillNextTileDeck() {
                nextTileDeck = [];
                for (let i = 0; i < 6; i++) {
                    nextTileDeck.push(1);
                    nextTileDeck.push(2);
                }
                for (let i = 0; i < 4; i++) {
                    nextTileDeck.push(3);
                }
                shuffleArray(nextTileDeck);
            }
            
            function shuffleArray(array) {
                for (let i = array.length - 1; i > 0; i--) {
                    const j = Math.floor(Math.random() * (i + 1));
                    [array[i], array[j]] = [array[j], array[i]];
                }
                return array;
            }
            
            function generateNextTile() {
                if (nextTileDeck.length === 0) {
                    refillNextTileDeck();
                }
                
                const randomIndex = Math.floor(Math.random() * nextTileDeck.length);
                nextTileValue = nextTileDeck[randomIndex];
                nextTileDeck.splice(randomIndex, 1);
                
                nextTileDisplay.textContent = nextTileValue;
                nextTileDisplay.className = 'next-value';
            }
            
            function addRandomTile() {
                const emptyCells = [];
                for (let r = 0; r < GRID_SIZE; r++) {
                    for (let c = 0; c < GRID_SIZE; c++) {
                        if (grid[r][c] === 0) {
                            emptyCells.push({r, c});
                        }
                    }
                }
                
                if (emptyCells.length > 0) {
                    const randomCell = emptyCells[Math.floor(Math.random() * emptyCells.length)];
                    grid[randomCell.r][randomCell.c] = nextTileValue;
                    generateNextTile();
                    return true;
                }
                return false;
            }
            
            function renderTiles() {
                tilesContainer.innerHTML = '';
                
                const boardWidth = gameBoard.offsetWidth - 20;
                const cellSize = (boardWidth - 30) / GRID_SIZE;
                
                for (let r = 0; r < GRID_SIZE; r++) {
                    for (let c = 0; c < GRID_SIZE; c++) {
                        if (grid[r][c] !== 0) {
                            const tile = document.createElement('div');
                            const value = grid[r][c];
                            tile.className = `tile tile-${value}`;
                            tile.textContent = value;
                            tile.dataset.row = r;
                            tile.dataset.col = c;
                            
                            tile.style.width = `${cellSize}px`;
                            tile.style.height = `${cellSize}px`;
                            tile.style.left = `${c * (cellSize + 10)}px`;
                            tile.style.top = `${r * (cellSize + 10)}px`;
                            
                            tilesContainer.appendChild(tile);
                            
                            tile.classList.add('new');
                            setTimeout(() => tile.classList.remove('new'), 200);
                        }
                    }
                }
            }
            
            function move(direction) {
                if (gameOver) return false;
                
                let moved = false;
                const movedTiles = new Set();
                
                switch(direction) {
                    case 'up':
                        for (let c = 0; c < GRID_SIZE; c++) {
                            for (let r = 1; r < GRID_SIZE; r++) {
                                if (grid[r][c] !== 0) {
                                    let newR = r;
                                    while (newR > 0 && grid[newR-1][c] === 0) {
                                        grid[newR-1][c] = grid[newR][c];
                                        grid[newR][c] = 0;
                                        newR--;
                                        moved = true;
                                    }
                                    if (newR > 0 && canMerge(grid[newR][c], grid[newR-1][c]) && !movedTiles.has(`${newR-1},${c}`)) {
                                        const mergedValue = mergeTiles(grid[newR][c], grid[newR-1][c]);
                                        grid[newR-1][c] = mergedValue;
                                        grid[newR][c] = 0;
                                        score += mergedValue;
                                        movedTiles.add(`${newR-1},${c}`);
                                        moved = true;
                                    }
                                }
                            }
                        }
                        break;
                        
                    case 'down':
                        for (let c = 0; c < GRID_SIZE; c++) {
                            for (let r = GRID_SIZE-2; r >= 0; r--) {
                                if (grid[r][c] !== 0) {
                                    let newR = r;
                                    while (newR < GRID_SIZE-1 && grid[newR+1][c] === 0) {
                                        grid[newR+1][c] = grid[newR][c];
                                        grid[newR][c] = 0;
                                        newR++;
                                        moved = true;
                                    }
                                    if (newR < GRID_SIZE-1 && canMerge(grid[newR][c], grid[newR+1][c]) && !movedTiles.has(`${newR+1},${c}`)) {
                                        const mergedValue = mergeTiles(grid[newR][c], grid[newR+1][c]);
                                        grid[newR+1][c] = mergedValue;
                                        grid[newR][c] = 0;
                                        score += mergedValue;
                                        movedTiles.add(`${newR+1},${c}`);
                                        moved = true;
                                    }
                                }
                            }
                        }
                        break;
                        
                    case 'left':
                        for (let r = 0; r < GRID_SIZE; r++) {
                            for (let c = 1; c < GRID_SIZE; c++) {
                                if (grid[r][c] !== 0) {
                                    let newC = c;
                                    while (newC > 0 && grid[r][newC-1] === 0) {
                                        grid[r][newC-1] = grid[r][newC];
                                        grid[r][newC] = 0;
                                        newC--;
                                        moved = true;
                                    }
                                    if (newC > 0 && canMerge(grid[r][newC], grid[r][newC-1]) && !movedTiles.has(`${r},${newC-1}`)) {
                                        const mergedValue = mergeTiles(grid[r][newC], grid[r][newC-1]);
                                        grid[r][newC-1] = mergedValue;
                                        grid[r][newC] = 0;
                                        score += mergedValue;
                                        movedTiles.add(`${r},${newC-1}`);
                                        moved = true;
                                    }
                                }
                            }
                        }
                        break;
                        
                    case 'right':
                        for (let r = 0; r < GRID_SIZE; r++) {
                            for (let c = GRID_SIZE-2; c >= 0; c--) {
                                if (grid[r][c] !== 0) {
                                    let newC = c;
                                    while (newC < GRID_SIZE-1 && grid[r][newC+1] === 0) {
                                        grid[r][newC+1] = grid[r][newC];
                                        grid[r][newC] = 0;
                                        newC++;
                                        moved = true;
                                    }
                                    if (newC < GRID_SIZE-1 && canMerge(grid[r][newC], grid[r][newC+1]) && !movedTiles.has(`${r},${newC+1}`)) {
                                        const mergedValue = mergeTiles(grid[r][newC], grid[r][newC+1]);
                                        grid[r][newC+1] = mergedValue;
                                        grid[r][newC] = 0;
                                        score += mergedValue;
                                        movedTiles.add(`${r},${newC+1}`);
                                        moved = true;
                                    }
                                }
                            }
                        }
                        break;
                }
                
                if (moved) {
                    scoreDisplay.textContent = score;
                    if (score > highScore) {
                        highScore = score;
                        localStorage.setItem('threesHighScore', highScore);
                        highScoreDisplay.textContent = highScore;
                    }
                    addRandomTile();
                    renderTiles();
                    checkGameOver();
                }
                
                return moved;
            }
            
            function canMerge(a, b) {
                return (a === 1 && b === 2) || (a === 2 && b === 1) || (a === b && a >= 3);
            }
            
            function mergeTiles(a, b) {
                if ((a === 1 && b === 2) || (a === 2 && b === 1)) {
                    return 3;
                } else if (a === b && a >= 3) {
                    return a + b;
                }
                return a;
            }
            
            function checkGameOver() {
                for (let r = 0; r < GRID_SIZE; r++) {
                    for (let c = 0; c < GRID_SIZE; c++) {
                        if (grid[r][c] === 0) {
                            return false;
                        }
                    }
                }
                
                for (let r = 0; r < GRID_SIZE; r++) {
                    for (let c = 0; c < GRID_SIZE; c++) {
                        const current = grid[r][c];
                        if (c < GRID_SIZE-1 && canMerge(current, grid[r][c+1])) {
                            return false;
                        }
                        if (r < GRID_SIZE-1 && canMerge(current, grid[r+1][c])) {
                            return false;
                        }
                    }
                }
                
                gameOver = true;
                if (score > highScore) {
                    highScore = score;
                    localStorage.setItem('threesHighScore', highScore);
                }
                
                finalScoreDisplay.textContent = score;
                gameOverScreen.style.display = 'flex';
                return true;
            }
            
            let touchStartX, touchStartY;
            
            gameBoard.addEventListener('touchstart', function(e) {
                if (e.touches.length > 1) return;
                e.preventDefault();
                const touch = e.touches[0];
                touchStartX = touch.clientX;
                touchStartY = touch.clientY;
            }, { passive: false });
            
            gameBoard.addEventListener('touchmove', function(e) {
                e.preventDefault();
            }, { passive: false });
            
            gameBoard.addEventListener('touchend', function(e) {
                e.preventDefault();
                if (!touchStartX) return;
                
                const touch = e.changedTouches[0];
                const diffX = touch.clientX - touchStartX;
                const diffY = touch.clientY - touchStartY;
                const minSwipeDistance = 30;
                
                if (Math.abs(diffX) > Math.abs(diffY)) {
                    if (Math.abs(diffX) > minSwipeDistance) {
                        if (diffX > 0) {
                            move('right');
                        } else {
                            move('left');
                        }
                    }
                } else {
                    if (Math.abs(diffY) > minSwipeDistance) {
                        if (diffY > 0) {
                            move('down');
                        } else {
                            move('up');
                        }
                    }
                }
                
                touchStartX = null;
                touchStartY = null;
            }, { passive: false });
            
            document.addEventListener('keydown', function(e) {
                if (['ArrowUp', 'ArrowDown', 'ArrowLeft', 'ArrowRight'].includes(e.key)) {
                    e.preventDefault();
                }
                
                if (gameOver) return;
                
                switch(e.key) {
                    case 'ArrowUp': move('up'); break;
                    case 'ArrowDown': move('down'); break;
                    case 'ArrowLeft': move('left'); break;
                    case 'ArrowRight': move('right'); break;
                }
            });
            
            newGameButton.addEventListener('click', initGame);
            restartButton.addEventListener('click', initGame);
            
            window.addEventListener('resize', renderTiles);
            
            initGame();
        });
    </script>
</body>
</html>
